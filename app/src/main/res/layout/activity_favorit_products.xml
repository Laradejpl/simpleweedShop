<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritProductsActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header_menu" />
    <include layout="@layout/side_menu_nav" />

    <TextView
        android:id="@+id/txt_title_favoris"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Vos produits favoris"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_black_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />


    <ListView
        android:id="@+id/listfav"
        android:layout_width="match_parent"
        android:layout_height="514dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_favoris" />

    <include layout="@layout/bar_bottom" />


</androidx.constraintlayout.widget.ConstraintLayout>