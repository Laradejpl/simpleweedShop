<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgmovier"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/imgProduct"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="ID:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Name:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_black_round"
            android:gravity="center"
            android:text="Price:"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stokeQuantitytv"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="100 en stock"
            android:textSize="17sp"
            android:background="@drawable/bgrougetriangle"
            android:textColor="@color/white"
            />


    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
      android:layout_gravity="center"
       >

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plus"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        />
    <ImageView
        android:id="@+id/favorit_star1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/favorite"
        />

   </LinearLayout>


</LinearLayout>