<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaypalEarnActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/bbacArrow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/backarrowblack"
        android:layout_marginStart="15dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gr_lime_round"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:src="@drawable/piggy"
                />
            <TextView
                android:id="@+id/cagnotte_paypal_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vous avez :"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/winAnimation_lott"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="80dp"
        app:lottie_imageAssetsFolder="raw"
        android:layout_marginTop="25dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:translationZ="2dp"
        app:lottie_rawRes="@raw/paypal"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Des récompences vous attendent ..."
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_pink_round"
        android:padding="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accomplissements"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_grey_roundd"
        android:layout_marginTop="10dp"
        >



        <ImageView
            android:id="@+id/paypal_cart_cup_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/qzzcadena"
            />
        <ImageView
            android:id="@+id/paypal_cart_cup_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/qzzcadena"
            />

        <ImageView
            android:id="@+id/paypal_cart_cup_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/qzzcadena"
            />

        <ImageView
            android:id="@+id/paypal_cart_cup_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/qzzcadena"
            />

        <ImageView
            android:id="@+id/paypal_cart_cup_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/qzzcadena"
            />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Les récompences"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:background="@drawable/bg_grey_roundd"
        android:layout_marginTop="10dp"

        >


            <ImageView
            android:id="@+id/paypal_cart_earn_1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalcinqcent"
            />



        <ImageView
            android:id="@+id/paypal_cart_earn_2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalcinqe"
            />

        <ImageView
            android:id="@+id/paypal_cart_earn_3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalrose"

            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_grey_roundd"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/paypal_cart_earn_4"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalor"
            />
        <ImageView
            android:id="@+id/paypal_cart_earn_5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalred"
            />

        <ImageView
            android:id="@+id/paypal_cart_earn_6"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@drawable/ppalpurple"
            />



    </LinearLayout>





</androidx.appcompat.widget.LinearLayoutCompat>