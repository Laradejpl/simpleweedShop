<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FetchOneProductActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/backarrow_fetch_product"
            android:layout_width="99dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/backarrowblack" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="358dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/marijuana" />

        <ImageView
            android:id="@+id/backhome"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:background="@drawable/ic_home" />
    </LinearLayout>


    <TextView
        android:id="@+id/title_product_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="68dp"

        android:text=""
        android:textStyle="bold"
        android:background="@color/whitehemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView

        android:id="@+id/scroll_product"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_du_produit"
                android:layout_width="335dp"
                android:layout_height="254dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/image_du_produit1"
                android:layout_width="335dp"
                android:layout_height="254dp"
                tools:srcCompat="@tools:sample/avatars" />





        </LinearLayout>


    </HorizontalScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/scroll_product"
        >

        <TextView
            android:id="@+id/id_product_fetchone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id:"
            android:textSize="20dp"
            />






        <TextView
            android:id="@+id/name_product_fetchone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="name:"
            android:layout_marginTop="10dp"
            android:textSize="26dp"
            />



        <TextView
            android:id="@+id/description_product_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitehemp"
            android:layout_gravity="center"
            android:text="description:"
            android:layout_marginTop="10dp"
            android:textSize="20dp"


            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/pricebckground"
            android:layout_marginTop="30dp"
            android:layout_gravity="end"


            >

            <TextView
                android:id="@+id/price_product_fetchone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:textSize="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â‚¬"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="30dp" />




        </LinearLayout>








    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>